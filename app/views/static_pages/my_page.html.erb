<div>
  <%= image_tag @user.avatar_url %>
  <%= @user.user_name %>
</div>

<% provide(:day_form_btn, 'Change Current Day') %>
<%= render 'layouts/user_day_form' %>

<% if !@day.nil? %>
  <div>I'm on Day <%= @day.to_i %> !</div>
  <div id="search-results">
    <%= render 'layouts/tweets' %>
  </div>
<% end %>
