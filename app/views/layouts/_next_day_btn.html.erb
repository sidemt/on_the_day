<div class="form-group">
  <%= form_for(current_user, :html => {class: 'day-form-container'}) do |f| %>
    <%= f.hidden_field :day, :value => @day + 1 %>
    <%= f.submit 'Proceed to Next Day', :id => 'btn-day-form',
                                    :class => 'btn btn-primary' %>
  <% end %>
</div>
