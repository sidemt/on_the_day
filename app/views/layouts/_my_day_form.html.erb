<!-- form for logged in user -->
<div class="form-group">
  <%= form_for(current_user, :html => {class: 'day-form-container'}) do |f| %>
    <div id="day-select-container">
      <div id="im-on">I'm on Day</div>
      <%= f.select :day, options_for_select((0..100), @day), {},
                             id: 'select-day', class: 'custom-select' %>
    </div>
    <%= f.submit 'Change Current Day', :id => 'btn-day-form',
                                    :class => 'btn btn-primary' %>
  <% end %>
</div>
