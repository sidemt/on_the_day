<!-- form for logged in user -->
<div class="form-group">
  <%= form_for(current_user, :html => {class: 'day-form-container'}) do |f| %>
    <div class="day-select-container">
      <div class="im-on">Change my day to</div>
      <%= f.select :day, options_for_select((0..100), @day), {},
                             id: 'select-day', class: 'custom-select select-day' %>
    </div>
    <%= f.submit 'Change Current Day', :class => 'btn btn-primary' %>
  <% end %>
</div>
